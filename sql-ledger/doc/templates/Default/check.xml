<?xml version="1.0" encoding="utf-8"?>
<html>
<head>
  <title></title>
</head>
<body>
  <sql-ledger-root></sql-ledger-root>
  <head>
  <title>CHEQUE</title>
  <link rel="stylesheet" href="<%templates%>/<%language_code%>/sqledger.css" />
</head>
<body>
  <table width="100%">

<!--
  <%include letterhead.html%>
-->

    <tr>
       
        <h4>CHEQUE</h4>
       
    </tr>

    <tr>
       
        <%company%>
       
    </tr>
    <tr>
       
        <%address%>
       
       
        <%source%>
       
    </tr>

    <tr>
          
    </tr>
    
    <tr>
       
        <%text_amount%> \dotfill
       
       
        <%decimal%>/100 
       
    </tr>

    <tr>
          
    </tr>
    
    <tr>
       
        <%datepaid%> 
       
       
        <%amount%>
       
    </tr>

<!--
% different date format for datepaid
% <%DD%><%MM%><%YYYY%>
-->

    <tr>
          
    </tr>
    
    <tr>
       
        <%name%>
        <br>
        <%address1%>
        <br>
        <%address2%>
        <br>
        <%city%>
<%if state%>
        , <%state%>
<%end state%>
        <br>
        <%zipcode%>
        <br>
        <%country%>
       
    </tr>

    <tr>
          
    </tr>
    
    <tr>
       
        <%memo%>
       
    </tr>
  </table>

  <table width="100%">
    <tr>
       
        <%company%>
       
    </tr>
    <tr>
       
        <%name%> 
       
       
          <%datepaid%>
       
       
        <%source%>
       
    </tr>
  </table>

  <table width="100%">
    <tr>
       
        Invoice #
       
       
        Invoice Date
       
       
        Amount Due
       
       
        Applied
       
    </tr>

<%foreach invnumber%>
    <tr>
       
        <%invnumber%> 
       
       
        <%invdate%> \dotfill
       
       
        <%due%> 
       
       
        <%paid%>
       
    </tr>
<%end invnumber%>
  </table>
  
  <table width="100%">
    <tr>
       
        <%memo%>
       
    </tr>
  </table>
</body>
</html>

