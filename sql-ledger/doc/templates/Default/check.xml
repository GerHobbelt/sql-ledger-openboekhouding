<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>CHEQUE</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="CHEQUE" >
    <crm>
      <%name%>
      <%address1%>
      <%address2%>
      <%city%>
      <%state%>
      <%zipcode%>
      <%country%>
    </crm>
       
    <data>
      <%company%>
      <%address%>
  
      <%source%>
       
      <%text_amount%>

      <decimal-value>   
        <%decimal%>
      </decimal-value>   

      <%datepaid%> 
      <%amount%>

<!--
% different date format for datepaid
% <%DD%><%MM%><%YYYY%>
-->

      <%memo%>
       
<%foreach invnumber%>
        <cheque-item>
          <%invnumber%> 
          <%invdate%>
          <%due%> 
          <%paid%>
        </cheque-item>
<%end invnumber%>

    </data>
  </content>
</sql-ledger-root>
