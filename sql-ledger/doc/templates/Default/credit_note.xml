<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>CREDIT NOTE</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="CREDIT-NOTE" >
    <crm type="to">
      <%name%>
      <%address1%> 
      <%address2%> 
      <%city%> 
      <%state%> 
      <%zipcode%> 
      <%country%> 
      <%contact%>
      <%customerphone%> 
      <%customerfax%> 
      <%email%> 
      <%customertaxnumber%> 
    </crm>
             
    <meta>
<!-- Invoice # -->
      <%invnumber%> 
      <%invdate%> 
      <%duedate%>
      <%ponumber%> 
      <%ordnumber%> 
      <%employee%> 
    </meta>
    
    <data>
        <table>
<%foreach account%>
          <tr valign="top">
             <%accno%> 
             <%account%> 
             
             <%amount%> 
              
             <%description%> 
              
             <%projectnumber%> 
          </tr>
<%end account%>

          <tr>
<%if taxincluded%>
             Total 
              
             <%invtotal%> 
<%end taxincluded%>

<%if not taxincluded%>
             Subtotal 
              
             <%subtotal%> 
<%end taxincluded%>
          </tr>

<%foreach tax%>
          <tr>
             <%taxdescription%> @ <%taxrate%> % 
              
             <%tax%> 
          </tr>
<%end tax%>

<%if not taxincluded%>
          <tr>
             Total 
              
             <%invtotal%> 
          </tr>
<%end taxincluded%>
        </table>
       
    </tr>

    <tr>
        

       
        <%text_amount%>***** <%decimal%>/100 <%currency%>
       
    </tr>

    <tr>
        

       
        <%notes%>
       
    </tr>

<%if paid_1%>
    <tr>
        

       
        <table>
          <tr>
             Payments 
          </tr>

          <tr>
             
               
             
          </tr>

          <tr>
             
              <table>
                <tr>
                   Date 
                    
                   Source 
                   Amount 
                </tr>
<%end paid_1%>

<%foreach payment%>
                <tr>
                   <%paymentdate%> 
                   <%paymentaccount%> 
                   <%paymentsource%> 
                   <%payment%> 
                </tr>
<%end payment%>

<%if paid_1%>
              </table>
             
          </tr>
        </table>
       
    </tr>
<%end paid_1%>

    <tr height="10">
        
    </tr>

<%foreach tax%>
    <tr>
        
       <span class="smallprint"><%taxdescription%> Registration <%taxnumber%></span> 
    </tr>
<%end tax%>

<%if taxincluded%>
    <tr>
        
    </tr>

    <tr>
       
        <span class="smallprint">Taxes shown are included in price.</span>
       
    </tr>
<%end taxincluded%>
  </table>
</body>
</html>
