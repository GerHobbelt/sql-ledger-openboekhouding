<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>TIME CARD</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="TIME-CARD" >
    <crm type="from">


        

       
        <table width="100%" cellspacing="0" cellpadding="0">
          <tr valign="top">
             
              <table>
                <tr>
                   Employee 
                   <%employee%> 
                </tr>

                <tr>
                   ID 
                   <%employee_id%> 
                </tr>
              </table>
             

             
              <table>
                <tr>
                   Card ID 
                   <%id%> 
                </tr>

                <tr>
                   Date 
                   <%transdate%> 
                </tr>

                <tr>
                   In 
                   <%checkedin%> 
                </tr>

                <tr>
                   Out 
                   <%checkedout%> 
                </tr>

                <tr>
                   Hours 
                   <%qty%> 
                </tr>
              </table>
             
          </tr>
        </table>
       
    </tr>

    <tr height="5">
        
    </tr>

    <tr>
        

       
        <table width="100%">
          <tr valign="bottom">
             
              <table>
                <tr valign="top">
                   Job/Project # 
                   <%projectnumber%> 
                </tr>

                <tr>
                   Description 
                   <%projectdescription%> 
                </tr>

                <tr valign="top">
                   Labor/Service Code 
                   <%partnumber%> 
                </tr>

                <tr>
                   Description 
                   <%description%> 
                </tr>
              </table>
             

             
              <table>
                <tr>
                   Rate 
                   <%sellprice%> 
                </tr>

                <tr>
                   Total 
                   <%total%> 
                </tr>
              </table>
             
          </tr>
        </table>
       
    </tr>

<%if notes%>
    <tr height="5">
        
    </tr>

    <tr>
        

       <%notes%> 
    </tr>
<%end notes%>
  </table>
</body>
</html>
