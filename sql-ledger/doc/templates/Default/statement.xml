<?xml version="1.0" encoding="utf-8"?>
<html>
<head>
  <title></title>
</head>
<body>
  <sql-ledger-root></sql-ledger-root>
  <head>
  <title>STATEMENT</title>
  <link rel="stylesheet" href="<%templates%>/<%language_code%>/sqledger.css" />
</head>
<body>
  <table width="100%">

    <%include letterhead.html%>

    <tr>
        

       
        <h4>S T A T E M E N T</h4>
       
    </tr>

    <tr>
        

       <%statementdate%> 
    </tr>

    <tr>
        

       
        <table width="100%">
          <tr valign="top">
             
            <%name%>
            <br>
            <%address1%> 

<%if address2%>
            <br>
            <%address2%> 
<%end address2%>

            <br>
            <%city%> 
<%if state%> 
            , <%state%> 
<%end state%> 
            <%zipcode%> 

<%if country%>
            <br>
            <%country%> 
<%end country%>

            <br>

<%if customerphone%>
            <br>
            Tel: <%customerphone%> 
<%end customerphone%> 

<%if customerfax%>
            <br>
            Fax: <%customerfax%> 
<%end customerfax%> 

<%if email%>
            <br>
            <%email%> 
<%end email%>
             
          </tr>
        </table>
       
    </tr>

    <tr height="10">
        
    </tr>

    <tr>
        

       
        <table width="100%">
          <tr>
             Invoice # 
             Order# 
             Date 
             Due 
             Current 
             30 
             60 
             90 
          </tr>

<%foreach invnumber%>
          <tr>
             <%invnumber%> 
             <%ordnumber%> 
             <%invdate%> 
             <%duedate%> 
             <%c0%> 
             <%c30%> 
             <%c60%> 
             <%c90%> 
          </tr>
<%end invnumber%>

          <tr>
             
               
             
          </tr>

          <tr>
              
              
              
              
             <%c0total%> 
             <%c30total%> 
             <%c60total%> 
             <%c90total%> 
          </tr>
        </table>
       
    </tr>

    <tr height="10">
        
    </tr>

    <tr>
        

       
        <table width="50%">
          <tr>
             Total Outstanding 
             <%total%> 
          </tr>
        </table>
       
    </tr>

    <tr>
        
       
         
       
    </tr>

    <tr>
        
       
      All amounts in <b><%currency%></b> funds.
      <br>
      Please make check payable to <b><%company%></b>.
       
    </tr>
  </table>
</body>
</html>
