<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>REQUEST FOR QUOTATION</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="REQUEST-FOR-QUOTATION" >
    <crm type="to">

            <%name%>
            <%address1%> 
            <%address2%> 
            <%city%> 
            <%state%> 
            <%zipcode%> 
            <%country%> 
            <%contact%> 
            <%vendorphone%> 
            <%vendorfax%> 
    </crm>
             

    <crm type="ship-to">
             
            <%shiptoname%>
            <%shiptoaddress1%> 
            <%shiptoaddress2%> 
            <%shiptocity%> 
            <%shiptostate%> 
            <%shiptozipcode%> 
            <%shiptocountry%> 
            <%shiptocontact%> 
            <%shiptophone%> 
            <%shiptofax%> 
             
          </crm>

        <data>
<!--	
             RFQ # 
             Date 
             Required by 
             Contact 
             Shipping Point 
             Ship via 
-->	     
             <%quonumber%> 
             <%quodate%> 
             <%reqdate%> 
             <%employee%> 
             <%shippingpoint%> 
             <%shipvia%> 

<!--
             Item 
             Number 
             Description 
             Qt'y 
             Delivery 
             Unit Price 
             Extended 
-->
<%foreach number%>
          <request-quotation-item>
             <%runningnumber%>
             <%number%> 
             <%description%> 
             <%qty%> 
             <%unit%> 
          </request-quotation-item>
<%end number%>

             <%notes%> 
    </data>
  </content>
</html>
