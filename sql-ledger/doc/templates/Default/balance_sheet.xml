<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>BALANCE SHEET</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="BALANCE-SHEET" >
    <crm>
      <%company%>
      <%address%>
    </crm>

    <meta>    
<%if method eq 'cash'%>
      <cash-method value="true" />
<%end method eq 'cash'%>

      <reporting-period>
        <%this_period%> 
      </reporting-period>

<%if department%>
      <%department%>
<%end department%>

      <%this_period%>
      <%previous_period%>
    </meta>

    <data>    
      <assets>    
<%foreach asset_account%>
        <asset>    
          <%asset_account%> 
          <%asset_this_period%> 
        
          <%asset_previous_period%> 
        </asset>    
<%end asset_account%>

        <%total_asset_this_period%>
        <%total_asset_previous_period%>
      </assets>    
      
      <liabilities>
<%foreach liability_account%>
        <liability>
          <%liability_account%> 
          <%liability_this_period%> 
        
          <%liability_previous_period%> 
        </liability>
<%end liability_account%>
       
        <%total_liability_this_period%>
        <%total_liability_previous_period%>
      <liabilities>
         
      <shareholders-equity>
<%foreach equity_account%>
        <equity>
          <%equity_account%> 
	  <%equity_this_period%> 
	  <%equity_previous_period%> 
        </equity>
<%end equity_account%>
       
        <%total_equity_this_period%>
        <%total_equity_previous_period%>
      <shareholders-equity>

      <summary>
        <!-- TOTAL LIABILITIES & EQUITY-->
        <%total_this_period%>
        <%total_previous_period%>
      </summary>
    </data>    

    <footer>    
      <%currency%> 
<%if currency ne 'CAD'%>
      <%exchangerate%>
<%end currency ne 'CAD'%>

      <currency-msg>
        All amounts in <%currency%>.
	
	<%if currency ne 'CAD'%> converted at <%exchangerate%><%end currency ne 'CAD'%>.
      </currency-msg>
    </footer>    
  </content>
</sql-ledger-root>
