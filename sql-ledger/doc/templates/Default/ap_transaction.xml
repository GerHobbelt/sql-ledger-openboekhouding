<?xml version="1.0" encoding="utf-8" ?>
<sql-ledger-root>
  <letterhead>
    <title>A/P-TRANSACTION</title>
    
    <%include letterhead.xml%>
  </letterhead>

  <content-type>AP-TRANSACTION</content-type>
  
  <content>
    <crm>
      <%name%>
      <%address1%>
      <%address2%>
      <%city%> 
      <%state%> 
      <%zipcode%> 
      <%country%> 
      <%contact%>
      <%vendorphone%>
      <%vendorfax%>
      <%email%>
      <%vendortaxnumber%>
    </crm>

    <invoice>    
    <invoice-leader>    
      <!-- Invoice # -->
      <%invnumber%>
      <%invdate%>
      <%duedate%>
      <!-- PO # -->
      <%ponumber%>
      <!-- Order # -->
      <%ordnumber%>
      <%employee%>
    </invoice-leader>    

    <invoice-content>    
    <account-set>    
<%foreach account%>
      <account>    
          <tr valign="top">
            <td><%accno%></td>
            <td><%account%></td>
            <td width="10"></td>
            <td align="right"><%amount%></td>
            <td width="10"></td>
            <td><%description%></td>
            <td width="10"></td>
            <td><%projectnumber%></td>
          </tr>
      </account>    
<%end account%>
    </account-set>    

    <tax-info>
      <tax-lines>
<%foreach tax%>
        <tax-line>
          <tr>
            <th colspan="2" align="right"><%taxdescription%>@ <%taxrate%> %</th>
            <td width="10"></td>
            <td align="right"><%tax%></td>
          </tr>
        </tax-line>
<%end tax%>
      </tax-lines>
    </tax-info>

      <summary-totals>
<%if not taxincluded%>
	<sans-tax-subtotal>
            <td align="right"><%subtotal%></td>
	</sans-tax-subtotal>
<%end taxincluded%>

	<total>
            <td align="right"><%invtotal%></td>
	</total>

      <%text_amount%>
      
      <currency-decimal-value>
      <%decimal%>
      </currency-decimal-value>
      <currency-info>
       <%currency%>
      </currency-info>
   </summary-totals>

      <invoice-notes>
      <%notes%>
      </invoice-notes>
    </tr>
    
<%if paid_1%>
    <payments>
<%end paid_1%>

<%foreach payment%>
    <payment>
                <tr>
                  <td><%paymentdate%></td>
                  <td><%paymentaccount%></td>
                  <td><%paymentsource%></td>
                  <td><%paymentmemo%></td>
                  <td align="right"><%payment%></td>
                </tr>
    </payment>
<%end payment%>

<%if paid_1%>
    </payments>
    </invoice-content>    

    <invoice-footer>    
<%end paid_1%>

<%if taxincluded%>
    <tax-included-msg>
        Taxes shown are included in price.
    </tax-included-msg>
<%end taxincluded%>
    </invoice-footer>    
    </invoice>    
  </content>
</sql-ledger-root>
