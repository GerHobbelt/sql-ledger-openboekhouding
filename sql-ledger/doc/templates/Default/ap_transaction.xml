<?xml version="1.0" encoding="utf-8" ?>
<sql-ledger-root>
  <letterhead>
    <title>A/P-TRANSACTION</title>
    
    <%include letterhead.xml%>
    
  </letterhead>

  <content-type>AP-TRANSACTION</content-type>
  
  <content>
    <crm>
      <%name%>
      <%address1%>
      <%address2%>
      <%city%> 
      <%state%> 
      <%zipcode%> 
      <%country%> 
      <%contact%>
      <%vendorphone%>
      <%vendorfax%>
      <%email%>
      <%vendortaxnumber%>
    </crm>

    <invoice>    
      <meta>    
        <!-- Invoice # -->
        <%invnumber%>
        <%invdate%>
        <%duedate%>
        <!-- PO # -->
        <%ponumber%>
        <!-- Order # -->
        <%ordnumber%>
        <%employee%>
      </meta>    

      <invoice-content>    
        <account-set>    
<%foreach account%>
          <account>    
            <%accno%>
            <%account%>
            <%amount%>
            <%description%>
            <%projectnumber%>
          </account>    
<%end account%>
        </account-set>    

        <tax-info>
          <tax-lines>
<%foreach tax%>
            <tax-line>
              <%taxdescription%>
          
          <tax-rate-percentage>
            <%taxrate%>
          <tax-rate-percentage>
          
              <%tax%>
            </tax-line>
<%end tax%>
          </tax-lines>
        </tax-info>

        <summary-totals>
<%if not taxincluded%>
          <sans-tax-subtotal>
            <%subtotal%>
          </sans-tax-subtotal>
<%end taxincluded%>

          <total>
            <%invtotal%>
          </total>

          <%text_amount%>
      
          <currency-decimal-value>
           <%decimal%>
          </currency-decimal-value>
          <currency-info>
           <%currency%>
          </currency-info>
        </summary-totals>

        <notes>
          <%notes%>
        </notes>
    
        <payments>
<%foreach payment%>
          <payment>
            <%paymentdate%>
        <%paymentaccount%>
        <%paymentsource%>
        <%paymentmemo%>
        <%payment%>
          </payment>
<%end payment%>
        </payments>
      </invoice-content>    

      <footer>    
<%if taxincluded%>
        <tax-included-msg>
          Taxes shown are included in price.
        </tax-included-msg>
<%end taxincluded%>
      </footer>    
    </invoice>    
  </content>
</sql-ledger-root>
