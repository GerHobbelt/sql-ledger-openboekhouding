<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>INVOICE</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="INVOICE" >
    <crm type="to">
      <%name%>
      <%address1%> 
      <%address2%> 
      <%city%> 
      <%state%> 
      <%zipcode%> 
      <%country%> 
      <%contact%>
      <%customerphone%> 
      <%customerfax%> 
      <%email%> 
    </crm>
    
    <crm type="ship-to">
      <%shiptoname%>
      <%shiptoaddress1%> 
      <%shiptoaddress2%> 
      <%shiptocity%> 
      <%shiptostate%> 
      <%shiptozipcode%> 
      <%shiptocountry%> 
      <%shiptocontact%>
      <%shiptophone%> 
      <%shiptofax%> 
      <%shiptoemail%> 
    </crm>
       
    <meta>
<!--    
             Invoice # 
             Date 
             Due 
             Order # 
             Salesperson 
             Shipping Point 
             Ship via 
-->	     
      <%invnumber%> 
      <%invdate%> 
      <%duedate%> 
      <%ordnumber%> 
      <%employee%> 
      <%shippingpoint%> 
      <%shipvia%> 
    </meta>

    <data>
<!--    
             Item 
             Number 
             Description 
             Qt'y 
             Unit Price 
             Disc % 
             Extended 
-->

<%foreach number%>
      <line-item>
        <%runningnumber%>
	<%number%> 
        <%description%> 
        <%deliverydate%> 
        <%qty%> 
        <%unit%> 
        <%sellprice%> 
        <%discountrate%> 
        <%linetotal%> 
      </line-item>
<%end number%>

<%if taxincluded%>
      <%invtotal%> 
<%end taxincluded%>

<%if not taxincluded%>
      <%subtotal%> 
<%end taxincluded%>

<%foreach tax%>
          <tr>
             <%taxdescription%> 
	     <%taxbase%> 
	     <%taxrate%>
             <%tax%> 
          </tr>
<%end tax%>

          <%paid%> 

<!-- Balance Due -->
             <%total%> 

             <%notes%> 


             <%text_amount%>
	     <%decimal%>
	     
             <%currency%>
       
    </tr>

    <payments>
<!--    
             Date 
             Account 
             Source 
             Amount 
-->

<%foreach payment%>
          <tr>
             <%paymentdate%> 
             <%paymentaccount%> 
             <%paymentsource%> 
             <%payment%> 
          </tr>
<%end payment%>


    <tr>
       Thank you for your valued business! 
    </tr>

        <payment-conditions-msg>
                Payment due by <%duedate%>. 
                Items returned are subject to a 10% restocking charge. 
                A return authorization must be obtained from <%company%> before goods are returned. 
                Returns must be shipped prepaid and properly insured. 
                <%company%> will not be responsible for damages during transit.
        </payment-conditions-msg>
               
               
             

<%foreach tax%>
    <tax>
      <%taxdescription%> 
      <%taxnumber%>
    </tr>
<%end tax%>

<%if taxincluded%>
    <tr>
      Taxes shown are included in price.
    </tr>
<%end taxincluded%>



  </table>
</body>
</html>
