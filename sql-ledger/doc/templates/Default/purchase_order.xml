<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>PURCHASE ORDER</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="PURCHASE-ORDER" >
    <crm type="to">
            <%name%>
            <%address1%> 
            <%address2%> 
            <%city%> 
            <%state%> 
            <%zipcode%> 
            <%country%> 
            <%contact%> 
            <%vendorphone%> 
            <%vendorfax%> 
    </crm>

    <crm type="ship-to">
            <%shiptoname%>
            <%shiptoaddress1%> 
            <%shiptoaddress2%> 
            <%shiptocity%> 
            <%shiptostate%> 
            <%shiptozipcode%> 
            <%shiptocountry%> 
            <%shiptocontact%>
            <%shiptophone%> 
            <%shiptofax%> 
          </crm>

          <meta>
<!--	  
             Order # 
             Order Date 
             Required by 
             Contact 
             Shipping Point 
             Ship Via 
-->	     
             <%ordnumber%> 
             <%orddate%> 
             <%reqdate%> 
             <%employee%> 
             <%shippingpoint%> 
             <%shipvia%> 
          </meta>

          <data>
<!--	  
             Item 
             Number 
             Description 
             Qt'y 
             Price 
             % 
             Amount 
-->

<%foreach number%>
          <order-item>
             <%runningnumber%>
             <%number%> 
             <%description%> 
             <%qty%> 
             <%unit%> 
             <%sellprice%> 
             <%discountrate%> 
             <%linetotal%> 
          </order-item>
<%end number%>

<%if taxincluded%>
             <%ordtotal%> 
<%end taxincluded%>

<%if not taxincluded%>
             <%subtotal%> 
<%end taxincluded%>


<%foreach tax%>
          <tr>
             <%taxdescription%> 
	     <%taxbase%>
	     <%taxrate%> 
             <%tax%> 
          </tr>
<%end tax%>

<%if not taxincluded%>
             <%ordtotal%> 
<%end taxincluded%>

<%if terms%>
          <tr>
             <%terms%>
             <%ordtotal%> 
          </tr>
<%end terms%>

<%if taxincluded%>
          <tr>
             Tax included 
          </tr>
<%end taxincluded%>

<%if ordtotal%>
          <tr>
             All prices in <b><%currency%></b> Funds 
          </tr>
<%end ordtotal%>


             <%notes%> 

       
    </data>
    
  </table>
</body>
</html>
