<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>WORK ORDER</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="WORK-ORDER" >
    <crm type="to">
            <%name%>
            <%address1%> 
            <%address2%> 
            <%city%> 
            <%state%> 
            <%zipcode%> 
            <%country%> 
            <%contact%> 
            <%customerphone%> 
            <%customerfax%> 
            <%email%> 
    </crm>

    <crm type="ship-to">
            <%shiptoname%>
            <%shiptoaddress1%> 
            <%shiptoaddress2%> 
            <%shiptocity%> 
            <%shiptostate%> 
            <%shiptozipcode%> 
            <%shiptocountry%> 
            <%shiptocontact%>
            <%shiptophone%> 
            <%shiptofax%> 
            <%shiptoemail%> 
          </crm>

          <data>
<!--	  
             Order # 
             Order Date 
             Required by 
             Salesperson 
             Shipping Point 
             Ship Via 
-->
             <%ordnumber%> 
             <%orddate%> 
             <%reqdate%> 
             <%employee%> 
             <%shippingpoint%> 
             <%shipvia%> 

<!--
             Item 
             Number 
             Description 
             Qt'y 
             Bin 
             Serial # 
-->
<%foreach number%>
          <work-item>
             <%runningnumber%>
             <%number%> 
             <%description%> 
             <%qty%> 
             <%unit%> 
             <%bin%> 
             <%serialnumber%> 
          </work-item>
<%end number%>

       <%notes%> 

    </data>
    
  </table>
</body>
</html>
