<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>PICK LIST</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="PICK-LIST" >
    <crm type="ship-to">
      <%shiptoname%>
      <%shiptoaddress1%> 
      <%shiptoaddress2%> 
      <%shiptocity%> 
      <%shiptostate%>
      <%shiptozipcode%>
      <%shiptocountry%>
      <%shiptocontact%> 
      <%shiptophone%> 
      <%shiptofax%> 
      <%shiptoemail%> 
    </crm>

<!-- <%company%> + <%address%> are common values found in LETTERHEAD chunk, so they do not show up here (while they DO in the HTML template...) -->

<!--
     Invoice # 
     Order # 
     Date 
     Contact 
     Warehouse 
     Shipping Point 
     Ship via 
-->
    <%invnumber%> 
    <%ordnumber%> 
    <%orddate%> 
    <%shippingdate%> 
    <%transdate%> 
    <%employee%> 
    <%warehouse%> 
    <%shippingpoint%> 
    <%shipvia%> 

<%foreach number%>
    <pick-item>
      <%runningnumber%> 
      <%number%> 
      <%description%> 
      <%serialnumber%> 
      <%qty%> 
      <%unit%> 
      <%bin%> 
    </pick-item>
<%end number%>
  </content>
</sql-ledger-root>
