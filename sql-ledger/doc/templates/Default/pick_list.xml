<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>PICK LIST</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="PICK-LIST" >
    <crm type="ship-to">
            <%shiptoname%>
            <%shiptoaddress1%> 
            <%shiptoaddress2%> 
            <%shiptocity%>
            <%shiptostate%>
            <%shiptozipcode%>
            <%shiptocountry%> 
            <%shiptocontact%> 
            <%shiptophone%> 
            <%shiptofax%> 
            <%shiptoemail%>
          </crm>
       
          <meta>
<!--	  
             Invoice # 
             Order # 
             Date 
             Contact 
             Warehouse 
             Shipping Point 
             Ship via 
-->	     

             <%invnumber%> 
             <%ordnumber%> 

             <%shippingdate%> 
             <%transdate%> 

             <%employee%> 
             <%warehouse%> 
             <%shippingpoint%> 
             <%shipvia%> 
          </meta>
       
          <data>
<!--	  
             Item 
             Number 
             Description 
             Qty 
             Ship 
             Bin 
-->	     

<%foreach number%>
          <pick-item>
             <%runningnumber%> 
             <%number%> 
             <%description%> 
             <%qty%> 
             <%unit%> 
             <%bin%> 
          </pick-item>
<%end number%>
    </data>
    
  </table>
</body>
</html>
