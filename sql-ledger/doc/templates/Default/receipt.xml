<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>RECEIPT</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="RECEIPT" >
    <crm type="from">



    <tr>
       
        <%source%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%text_amount%>
       
      <!-- \dotfill -->
       
        <%decimal%>/100
       
    </tr>
  </table>

  <table width="100%">
    <tr>
        
      
       
          <%datepaid%>
       
       
        <%amount%>
       
    </tr>
  </table>
        
<!--
% different date format for datepaid
% <%DD%><%MM%><%YYYY%>
-->

  <table width="100%">
    <tr>
       
        <%name%>
         
        <%address1%>
         
        <%address2%>
         
        <%city%>
        <%if state%>
        , <%state%>
        <%end state%>
        <%zipcode%>
         
        <%country%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%memo%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%company%>
       
    </tr>
  </table>
        
  <table width="100%">
    <tr>
       
        <%name%>
       
    </tr>
    <tr>
       
        <%datepaid%>
       
    </tr>
    <tr>
       
        <%source%>
       
    </tr>
  </table>
        
  <table width="100%">
    <tr>
       
        Invoice No.
       
       
        Invoice Date
       
       
        Due
       
       
        Applied
       
    </tr>

<%foreach invnumber%>
    <tr>
       
        <%invnumber%>
       
       
        <%invdate%>
       
      <!-- \dotfill -->
       
        <%due%>
       
       
        <%paid%>
       
    </tr>
<%end invnumber%>
  </table>
        
  <table width="100%">
    <tr>
       
        <%memo%>
       
    </tr>
  </table>
</body>
</html>
