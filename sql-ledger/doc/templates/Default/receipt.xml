<?xml version="1.0" encoding="utf-8"?>
<html>
<head>
  <title></title>
</head>
<body>
  <sql-ledger-root></sql-ledger-root>
  <head>
  <title>RECEIPT</title>
  <link rel="stylesheet" href="<%templates%>/<%language_code%>/sqledger.css" />
</head>
<body>
  <table width="100%">

  <%include letterhead.html%>

    <tr>
       
        <h4>RECEIPT</h4>
       
    </tr>

    <tr>
       
        <%source%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%text_amount%>
       
      <!-- \dotfill -->
       
        <%decimal%>/100
       
    </tr>
  </table>

  <table width="100%">
    <tr>
        
      
       
          <%datepaid%>
       
       
        <%amount%>
       
    </tr>
  </table>
        
<!--
% different date format for datepaid
% <%DD%><%MM%><%YYYY%>
-->

  <table width="100%">
    <tr>
       
        <%name%>
        <br>
        <%address1%>
        <br>
        <%address2%>
        <br>
        <%city%>
        <%if state%>
        , <%state%>
        <%end state%>
        <%zipcode%>
        <br>
        <%country%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%memo%>
       
    </tr>

    <tr>
        
    </tr>

    <tr>
       
        <%company%>
       
    </tr>
  </table>
        
  <table width="100%">
    <tr>
       
        <%name%>
       
    </tr>
    <tr>
       
        <%datepaid%>
       
    </tr>
    <tr>
       
        <%source%>
       
    </tr>
  </table>
        
  <table width="100%">
    <tr>
       
        Invoice No.
       
       
        Invoice Date
       
       
        Due
       
       
        Applied
       
    </tr>

<%foreach invnumber%>
    <tr>
       
        <%invnumber%>
       
       
        <%invdate%>
       
      <!-- \dotfill -->
       
        <%due%>
       
       
        <%paid%>
       
    </tr>
<%end invnumber%>
  </table>
        
  <table width="100%">
    <tr>
       
        <%memo%>
       
    </tr>
  </table>
</body>
</html>
