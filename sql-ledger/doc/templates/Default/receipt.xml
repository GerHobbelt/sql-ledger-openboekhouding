<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>RECEIPT</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="RECEIPT" >
    <crm type="from">
        <%name%>
        <%address1%>
        <%address2%>
        <%city%>
        <%state%>
        <%zipcode%>
        <%country%>
    </crm>


    <data>
       
        <%source%>
       
        <%text_amount%>
       
        <%decimal%>
       
          <%datepaid%>
       
        <%amount%>

<!--
% different date format for datepaid
% <%DD%><%MM%><%YYYY%>
-->

        <%memo%>
       
        <%company%>
       
        <%name%>
       
        <%datepaid%>
       
<!--       
        Invoice No.
        Invoice Date
        Due
        Applied
-->

<%foreach invnumber%>
    <receipt-item>
        <%invnumber%>
        <%invdate%>
        <%due%>
        <%paid%>
    </receipt-item>
<%end invnumber%>
       
    </data>
    
  </table>
</body>
</html>
