<?xml version="1.0" encoding="utf-8"?>
<sql-ledger-root>
  <letterhead>
    <title>QUOTATION</title>

    <%include letterhead.xml%>
    
  </letterhead>

<!-- 
 all XML formats have the same structure: the info is contained in a CONTENT block of certain TYPE.
 That way we can batch/merge XML files without loosing any data; all they'll share is 
 the LETTERHEAD block above and FOOTER block further below.
-->
  <content type="QUOTATION" >
    <crm type="from">
            <%name%>
            <%address1%> 
            <%address2%> 
            <%city%> 
            <%state%> 
            <%zipcode%> 
            <%country%> 
            <%contact%> 
            <%customerphone%> 
            <%customerfax%> 
            <%email%> 
          </crm>

          <meta>
<!--	  
             Number 
             Date 
             Valid until 
             Contact 
             Shipping Point 
             Ship via 
-->
             <%quonumber%> 
             <%quodate%> 
             <%reqdate%> 
             <%employee%> 
             <%shippingpoint%> 
             <%shipvia%> 
          </meta>

          <data>
<!--	  
             Item 
             Number 
             Description 
             Qt'y 
             Price 
             Disc % 
             Amount 
-->	     
<%foreach number%>
          <quotation-item>
             <%runningnumber%> 
             <%number%> 
             <%description%> 
             <%qty%> 
             <%unit%> 
             <%sellprice%> 
             <%discountrate%> 
             <%linetotal%> 
          </quotation-item>
<%end number%>

<%if taxincluded%>
             <%invtotal%> 
<%end taxincluded%>

<%if not taxincluded%>
             <%subtotal%> 
<%end taxincluded%>

<%foreach tax%>
          <tr>
             <%taxdescription%> 
	     <%taxbase%> 
	     <%taxrate%>
             <%tax%> 
          </tr>
<%end tax%>

              <%terms%>
	      
             <%quototal%> 

             <%notes%> 

            
            <%currency%>
	    
             
              <payment-conditions-msg>
                Special order items are subject to a 10% cancellation fee.
              </payment-conditions-msg>
             
       
    </data>

  </table>
</body>
</html>
